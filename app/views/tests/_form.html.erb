
  <%= form_with model: @test, local: true  do |f| %>
    <%= render 'shared/errors', resource: @test %>

    <p>
      <%= f.label :title %><br>
      <%= f.text_field :title %>
    </p>

    <p>
      <%= f.label :level %><br>
      <%= f.text_field :level %>
    </p>

    <p>
      <%= f.label :category_id %>
      <%= f.collection_select :category_id, Category.all, :id, :title, prompt: true %>
    </p>

    <p>
      <%= f.label :author_id %>
      <%= f.collection_select :author_id, User.all, :id, :name, prompt: true %>
    </p><br>

    <%= f.submit %>
  <% end %>

  <%= link_to "Back to all tests", tests_path %>