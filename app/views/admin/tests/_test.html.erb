
  <tr>

    <td class="align-middle">
      <%= content_tag :span, test.title, class: 'test-title', data: { test_id: test.id } %>
      <%= render 'form_inline', test: test = @test ? @test : test %>
    </td>
    <td class="align-middle"><%= test.level %></td>
    <td class="align-middle"><%= test.questions.count %></td>
    <td class="align-middle"><%= link_to t('helpers.submit.test.show'), admin_test_path(test), method: :get %></td>
    <td class="align-middle">
      <%= link_to t('helpers.submit.test.edit'),
                  edit_admin_test_path(test),
                  data: { test_id: test.id },
                  class: 'form-inline-link' %>
    </td>
    <td class="align-middle">
      <%= link_to t('helpers.submit.test.delete'),
                  admin_test_path(test),
                  method: :delete,
                  data: { confirm: t('helpers.submit.test.confirm') } %>
    </td>

  </tr>