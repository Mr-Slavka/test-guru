
  <%= form_with model: [:admin, @test, @question] , local: true do |f| %>
    <%= render 'shared/errors', resource: @question %>

    <h2><%= question_header(@question)%></h2>

    <p>
      <%= f.label :body %><br>
      <%= f.text_field :body, id: :question_body %>
    </p>

    <p><%= f.submit %></p>
  <% end %>

  <%= link_to 'Back to questions', admin_test_path(@question.test) %>