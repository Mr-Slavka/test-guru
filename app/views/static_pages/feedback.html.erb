<div class="row justify-content-center">
  <div class="col col-md-6">

    <h2><%=t('.send_your_feedback')%></h2>
    <%= form_with url: feedback_path do |f| %>
      <div class="mb-3">
        <%= f.label :email, class: 'form-label' %>
        <%= f.text_field :email, id: :feedback_email, class: 'form-control' %>
      </div>

      <div class="mb-3">
        <%= f.label t('.message'), class: 'form-label' %>
        <%= f.text_area :message, id: :feedback_message, rows: 8, cols: 40, required: true, class: 'form-control' %>
      </div>
      <div class="text-center">
        <%= f.submit t('.send'), class: 'btn btn-primary' %>
      </div>
    <% end %>
  </div>
</div>